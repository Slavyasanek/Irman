            .checkout-group.checkout-form__group 
                h3.section-title.checkout-group__title Оплата
                .checkout-group__wrapper
                    .custom-field.custom-field--type_select.checkout-group__input
                        label(for="payment").custom-field__label Оплата*
                        .custom-field__input-wr 
                            input(type="hidden", name="payment", id="payment", placeholder="Оберіть спосіб оплати")
